---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const pageTitle = "About me";
const identity = {
	firstName: "Asa",
	lastName: "Mitaka",
	country: "Ukraine",
	hobbies: ["velocycling", "drawing", "gaming"]
}

const skills = ["HTML", "CSS", "JS", "React", "React-Router-DOM", "Redux/@toolkit", "zustand"];
const skillColor = "navy";
const fontWeight = 600;
const textCase = "uppercase";
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<style define:vars={{skillColor, fontWeight, textCase}}>
			li {
				margin-bottom: 5px;
				list-style-type: none;
				font-size: 20px;
			}

			.about__li {
				margin-left: 0;
				margin-bottom: 5px;
				list-style-type: none;
				color: var(--skillColor);
				font-size: 18px;
			}

			.about__p {
				margin-bottom: 0;
				font-size: 24px;
				font-weight: var(--fontWeight);
			}

			.name {
				text-transform: var(--textCase);
				font-weight: var(--fontWeight);
			}
		</style>
	</head>
	<body>
        <Header />
		<h1>{pageTitle}</h1>
        <h2>... and my new Astro site!</h2>
		<li>My name is <span class="name">{identity.firstName} {' '} {identity.lastName}</span></li>
		<li>I am from {identity.country}</li>
		<p class="about__p">Hobbies: </p>
		<ul>
			{identity.hobbies.map(hobby => <li class="about__li">{hobby}</li>)}
		</ul>
		<br>
		<p class="about__p">Skills: </p>
		<ul>
			{skills.map(skill => <li class="about__li">{skill}</li>)}
		</ul>
		<Footer />
	</body>
</html>
