---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BaseLayouts from '../layouts/BaseLayouts.astro';
const pageTitle = "About me";
const identity = {
	firstName: "Asa",
	lastName: "Mitaka",
	country: "Ukraine",
	hobbies: ["velocycling", "drawing", "gaming"]
}

const skills = ["HTML", "CSS", "JS", "React", "React-Router-DOM", "Redux/@toolkit", "zustand"];
---
<BaseLayouts pageTitle={pageTitle}>
<h2>... and my new Astro site!</h2>
<li>My name is {identity.firstName} {' '} {identity.lastName}</li>
<li>I am from {identity.country}</li>
<p class="about__p">Hobbies: </p>
<ul>
	{identity.hobbies.map(hobby => <li class="about__li">{hobby}</li>)}
</ul>
<br>
<p class="about__p">Skills: </p>
<ul>
	{skills.map(skill => <li class="about__li">{skill}</li>)}
</ul>
</BaseLayouts>